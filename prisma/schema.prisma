generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String @id @default(cuid())
  name         String
  email        String @unique
  passwordHash String
  terms        Term[]
  createdAt    DateTime @default(now())
}

model Term {
  id          String   @id @default(cuid())
  term        String
  summary     String
  description String
  query       String
  createdAt   DateTime @default(now())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}

model MasterTerm {
  id          String   @id @default(cuid())
  term        String
  termLower   String   @unique
  termKo      String?
  summary     String
  description String
  createdAt   DateTime @default(now())
}
